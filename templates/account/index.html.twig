{% extends 'base.html.twig' %}

{% block title %}Account Utilisateur
{% endblock %}

{% block body %}

	<div class="container w-50 py-4">
		<h1>Bienvenue
			<span class="text-primary text-capitalize">
				{{ app.user.lastname }}
			</span>
			!
		</h1>

		<div class="pv 3">
			<p>Téléphone :
				{{ app.user.phonenumber }}</p>
			<p>Email :
				{{ app.user.email }}</p>
		</div>
		<div class="pv 3">
			<p>Code postale :
				{{ app.user.postcode }}
