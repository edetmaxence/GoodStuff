<section class="secondSec" id="secondSec">
    <div id="users">
        <table class="tableUsers">
            <thead>
                <tr>
                    <th class="td">Nom</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td class="td">{{user.firstname}}</td>
                        <td>{{user.email}}</td>
                        <td id="roles_{{ user.id }}" >
                            {% if user.roles[0] == "ROLE_ADMIN" %}
                                {{ "ADMIN" }}
                            {% else %}
                                {{ "USER" }}
                            {% endif %}
                        </td>
                        <td class="adminChange">
                            <a data-id="{{ user.id }}" data-role="ROLE_ADMIN" class="btn btn-outline-danger btn-sm role">Admin</a>
                            <a data-id="{{ user.id }}" data-role="ROLE_USER" class="btn btn-outline-success btn-sm role">Users</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="paginatUser">
            <p>{{ knp_pagination_render(users) }}</p>
        </div>
    </div>
</section>
