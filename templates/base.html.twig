<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">GoodStuff</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <div class="nav-link" href="{# {{ path('new_advertisement') }} #}">Déposer une annonce</div>
                    </li>                    
                    {% if app.user is not null %}
                        <li class="nav-item">
                            <a class="nav-link" href="{# {{ path('category_list') }} #}">Catégories</a>
                        </li>
                    {% endif %}
                    
                    {% if app.user is not null %}
                        <li class="nav-item">
                            <a class="nav-link" href="{# {{ path('app_account') }} #}">Bonjour {# {{ app.user.userIdentifier }} #}</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="{# {{ path('app_admin') }} #}">Administrator</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                                <a class="nav-link text-warning" href="{# {{ path('app_logout') }} #}">Se déconnecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{# {{ path('app_login') }} #}">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{# {{ path('app_register') }} #}">Ouvrir un compte</a>
                        </li>
                    {% endif %}
                </ul>
                </div>
            </div>
        </nav>
        <div class="container py-5">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
